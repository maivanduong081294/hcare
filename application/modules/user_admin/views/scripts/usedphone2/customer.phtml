<script>
    $().ready(function(){
         $("#submit").click(function(e){
             e.preventDefault();
             var fullname = $("#fullname").val();
             var address = $("#address").val();
             var phone = $("#phone").val();
             if (fullname == "") {
                 alert("Vui lòng nhập họ tên khách hàng.");
                 $("#fullname").focus();
                 return;
             }
             if (address == "") {
                 alert("Vui lòng nhập địa chỉ khách hàng.");
                 $("#address").focus();
                 return;
             }
             if (phone == "") {
                 alert("Vui lòng nhập số điện thoại khách hàng.");
                 $("#phone").focus();
                 return;
             }
             var url = "/admin/user/usedphone2/save-customer";
             $.post(url, $("#frmBG").serialize(), function(resp){
                    alert("Lưu thành công!");
                    $("#cid").val(resp);
                    $("#submit").show();
                    window.location = "/admin/user/usedphone2/info?id="+resp;
             });
         });
    });
</script>

