<script>
    function send_voucher(){
        var id_addon_user = $('#id_addon_user').val();
        $('#wt').show();
        $('#btnSave').hide();
        var id = $('#id').val();
        var token = $('#token').val();
        var ajaxLink = "/admin/user/vouchers/voucherthumaycu";
        show_loading();
        $.ajax({
            method: 'get',
            cache: false,
            url: ajaxLink,
            data: {id_addon_user: id_addon_user,id: id,token: token},
            dataType: 'html',
            success: function (data) {
                $('#wt').hide();
                $('#btnSave').show();
                $('#table_voucher').html(data);
                hidden_loading();
                
            }
        });
        
        
    }
</script>